# GraphQL schema example
#
# https://gqlgen.com/getting-started/

directive @auth on FIELD_DEFINITION

type User {
  id: ID!
  email: String!
  name: String!
  boards: [Board]!
}

type Board {
  id: ID!
  title: String!
  description: String!
  createdAt: String!
  notes: [Note]!
}

type Note {
  id: ID!
  description: String!
}

type Query {
  me: User! @auth
}
